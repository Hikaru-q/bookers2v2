<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <div class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">投稿順 <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to '新しい順', books_path(latest: "true") %></li>
          <li><%= link_to '古い順', books_path(old: "true") %></li>
          <li><%= link_to '評価の高い順', books_path(star_count: "true") %></li>
          <li><%= link_to 'いいねの多い順（過去1週間）', books_path %></li>
        </ul>
      </div>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>